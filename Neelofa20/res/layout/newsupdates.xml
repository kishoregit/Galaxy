<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsupdates"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundnews" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/topimg"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/shadow" />

    <ImageView
        android:id="@+id/ivNewsupdatesBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="60dp"
        android:visibility="visible" />

    <ListView
        android:id="@+id/newsList"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView2"
        android:divider="#00000000" >
    </ListView>

    <ImageView
        android:id="@+id/topimg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/latestnewstop" />

    <ImageView
        android:id="@+id/imageView2222"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/shadow2" />

</RelativeLayout>