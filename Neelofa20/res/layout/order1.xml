<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/editback"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/registerimg"
        android:background="@drawable/editback" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/shipping_last_name"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/right"
                android:layout_marginRight="@dimen/left"
                                android:layout_marginTop="10dp"
                
                                android:background="@drawable/orderback"
                android:ems="10"
                android:hint="Shipping Lastname" />

            <EditText
                android:id="@+id/shipping_first_name"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/right"
                android:layout_marginRight="@dimen/left"
                android:background="@drawable/orderback"
                android:ems="10"
                android:hint="Shipping Firstname" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/shipping_phone_1"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/right"
                android:layout_marginRight="@dimen/left"
                android:background="@drawable/orderback"
                android:ems="10"
                android:hint="Shipping Phone1"
                android:inputType="number" >
            </EditText>

            <EditText
                android:id="@+id/shipping_phone_2"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/right"
                android:layout_marginRight="@dimen/left"
                android:background="@drawable/orderback"
                android:ems="10"
                android:hint="Shipping Phone2"
                android:inputType="number" />

            <EditText
                android:id="@+id/shipping_address_1"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/right"
                android:layout_marginRight="@dimen/left"
                android:background="@drawable/orderback"
                android:ems="10"
                android:hint="Shipping Address1" />

            <EditText
                android:id="@+id/shipping_address_2"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/right"
                android:layout_marginRight="@dimen/left"
                android:background="@drawable/orderback"
                android:ems="10"
                android:hint="Shipping Address2" />

            <EditText
                android:id="@+id/shipping_city"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/right"
                android:layout_marginRight="@dimen/left"
                android:background="@drawable/orderback"
                android:ems="10"
                android:hint="Shipping City" />

            <EditText
                android:id="@+id/shipping_pincode"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/right"
                android:layout_marginRight="@dimen/left"
                android:background="@drawable/orderback"
                android:ems="10"
                android:hint="Shipping Pincode" />

            <AutoCompleteTextView
                android:id="@+id/shipping_country_id"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/right"
                android:layout_marginRight="@dimen/left"
                android:background="@drawable/orderback"
                android:ems="10"
                android:hint="Shipping Country" />

            <AutoCompleteTextView
                android:id="@+id/shipping_zone_id"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/right"
                android:layout_marginRight="@dimen/left"
                android:background="@drawable/orderback"
                android:ems="10"
                android:hint="Shipping Zone" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/registerimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/designbutton"
        android:text="Order" />

</RelativeLayout>